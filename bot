# bot.py

import os
import discord
from discord.ext import commands, tasks
from discord.utils import get
from dotenv import load_dotenv
import asyncio
import sqlite3
import random

# Auto-utworzenie pliku .env przy pierwszym uruchomieniu
if not os.path.exists(".env"):
    print("ğŸ“„ TworzÄ™ plik .env...")
    token = input("ğŸ”‘ Wklej swÃ³j DISCORD_TOKEN: ").strip()
    guild = input("ğŸ  Wklej swÃ³j GUILD_ID (ID serwera Discord): ").strip()
    with open(".env", "w") as f:
        f.write(f"DISCORD_TOKEN={token}\nGUILD_ID={guild}\n")
    print("âœ… Plik .env zostaÅ‚ utworzony.")

load_dotenv()
TOKEN = os.getenv("DISCORD_TOKEN")
GUILD_ID = int(os.getenv("GUILD_ID"))

intents = discord.Intents.default()
intents.message_content = True
intents.guilds = True
intents.members = True
intents.messages = True

bot = commands.Bot(command_prefix='!', intents=intents)

# PoÅ‚Ä…czenie z bazÄ… danych
conn = sqlite3.connect('bot.db')
c = conn.cursor()
c.execute('''CREATE TABLE IF NOT EXISTS economy (
    user_id INTEGER PRIMARY KEY,
    coins INTEGER DEFAULT 0
)''')
c.execute('''CREATE TABLE IF NOT EXISTS shop (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    price INTEGER
)''')
c.execute('''CREATE TABLE IF NOT EXISTS warnings (
    user_id INTEGER PRIMARY KEY,
    count INTEGER DEFAULT 0
)''')
c.execute('''CREATE TABLE IF NOT EXISTS levels (
    user_id INTEGER PRIMARY KEY,
    xp INTEGER DEFAULT 0,
    level INTEGER DEFAULT 1
)''')
conn.commit()
