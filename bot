# Event: uruchomienie bota
@bot.event
async def on_ready():
    print(f"âœ… Zalogowano jako {bot.user} (ID: {bot.user.id})")
    guild = bot.get_guild(GUILD_ID)
    if guild:
        log_channel = get(guild.text_channels, name="logi-ticket")
        if log_channel:
            await log_channel.send(f"ğŸŸ¢ Bot `{bot.user.name}` uruchomiony i gotowy!")

# Komenda !ticket
@bot.command()
async def ticket(ctx, *, opis="Brak opisu"):
    guild = ctx.guild
    category = discord.utils.get(guild.categories, name="ğŸ“â”‚tickety")
    if not category:
        category = await guild.create_category("ğŸ“â”‚tickety")

    overwrites = {
        guild.default_role: discord.PermissionOverwrite(read_messages=False),
        ctx.author: discord.PermissionOverwrite(read_messages=True, send_messages=True),
        get(guild.roles, name="Administrator"): discord.PermissionOverwrite(read_messages=True)
    }

    ticket_channel = await guild.create_text_channel(f"ticket-{ctx.author.name}", overwrites=overwrites, category=category)
    await ticket_channel.send(f"{ctx.author.mention} zgÅ‚osiÅ‚ problem:\n**{opis}**")

    log_channel = get(guild.text_channels, name="logi-ticket")
    if log_channel:
        await log_channel.send(f"ğŸ« Utworzono ticket dla {ctx.author.mention}: `{ticket_channel.name}`")

# Komenda !przejmij (dla adminÃ³w)
@bot.command()
@commands.has_permissions(manage_channels=True)
async def przejmij(ctx):
    await ctx.send(f"{ctx.author.mention} przejÄ…Å‚ ten ticket.")
    log_channel = get(ctx.guild.text_channels, name="logi-ticket")
    if log_channel:
        await log_channel.send(f"ğŸ›  {ctx.author.mention} przejÄ…Å‚ zgÅ‚oszenie w `{ctx.channel.name}`")

# Komenda !close z emoji potwierdzenia
@bot.command()
async def close(ctx):
    def check(reaction, user):
        return user == ctx.author and str(reaction.emoji) in ["âœ…", "âŒ"]

    embed = discord.Embed(title="ZamknÄ…Ä‡ ticket?", description="Kliknij âœ… aby zamknÄ…Ä‡, âŒ aby anulowaÄ‡.", color=0xff0000)
    msg = await ctx.send(embed=embed)
    await msg.add_reaction("âœ…")
    await msg.add_reaction("âŒ")

    try:
        reaction, _ = await bot.wait_for("reaction_add", timeout=30.0, check=check)
        if str(reaction.emoji) == "âœ…":
            await ctx.send("âœ… Ticket zostanie zamkniÄ™ty za 5 sekund...")
            await asyncio.sleep(5)
            log_channel = get(ctx.guild.text_channels, name="logi-ticket")
            if log_channel:
                await log_channel.send(f"âŒ Ticket `{ctx.channel.name}` zostaÅ‚ zamkniÄ™ty przez {ctx.author.mention}")
            await ctx.channel.delete()
        else:
            await ctx.send("âŒ ZamkniÄ™cie anulowane.")
    except asyncio.TimeoutError:
        await ctx.send("âŒ› Czas minÄ…Å‚. ZamkniÄ™cie anulowane.")
